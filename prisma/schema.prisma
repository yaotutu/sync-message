generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/users.db"
}

model User {
  id        String      @id @default(cuid())
  username  String      @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  products  Product[]
  config    UserConfig?
  cardKeys  CardKey[]
}

model Product {
  id          String    @id @default(cuid())
  title       String
  imageUrl    String?
  price       Float?
  description String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}

model UserConfig {
  id        String   @id @default(cuid())
  theme     String?
  language  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
}

model CardKey {
  id        String    @id @default(cuid())
  key       String    @unique
  status    String    @default("unused")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  usedAt    DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    String
}
