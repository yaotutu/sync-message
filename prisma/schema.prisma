generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/users.db"
}

model User {
  id        String      @id @default(cuid())
  username  String      @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  products  Product[]
  config    UserConfig?
  cardKeys  CardKey[]

  @@map("users")
}

model Product {
  id          String    @id @default(cuid())
  title       String
  imageUrl    String?
  link        String
  price       Float?
  description String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [username])
  userId      String

  @@map("products")
}

model UserConfig {
  id        String   @id @default(cuid())
  theme     String?
  language  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique

  @@map("user_configs")
}

model CardKey {
  id        String    @id @default(cuid())
  key       String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  used      Boolean   @default(false)
  usedAt    DateTime?
  @@map("card_keys")
}
